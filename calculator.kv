#:import utils kivy.utils

<Button>:
	font_size: 32
    # Font Color
	color: 149/255,64/255,191/255, 1
	size_hint: 0.2, 0.2


<NewButton@Button>
    background_color: (0,0,0,0)
    background_normal: ''
    canvas.before:
        Color:
            rgba: utils.get_color_from_hex('#a4ebf3')
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [10]


<OpButton@Button>
    background_color: 0,0,0,0
    background_normal: ''
    canvas.before:
        Color:
            rgba: utils.get_color_from_hex('#00ffbf')
        RoundedRectangle:
            size:self.size
            pos:self.pos
            radius: [10]


<MyLayout>
    BoxLayout:
        orientation:"vertical"
        size: root.width,root.height

        TextInput:
            id: calc_inp
            text:"0"
            font_size:40
            halign:"right"
            size_hint:(1,0.25)
        
        GridLayout:
            cols:4
            rows:6
            spacing: 7
            
            OpButton:
                id:clear
                text:"C"
                on_press:root.clear()
            
            OpButton:
                text:"%"
                on_press:root.math_sign("%") 
                
            OpButton:
                text:"<<"
                on_press:root.remove()
                
            OpButton:
                text:"/"
                on_press:root.math_sign("/")
                
            NewButton:
                text:"7"
                on_press:root.click(7)

            NewButton:                
                text:"8"
                on_press:root.click(8)
                
            NewButton:
                text:"9"
                on_press:root.click(9)
                         
            OpButton:              
                text:"x"
                on_press:root.math_sign("*")
  
            NewButton:
                text:"4"
                on_press:root.click(4)

            NewButton:
                text:"5"
                on_press:root.click(5)

            NewButton:
                text:"6"
                on_press:root.click(6)
   
            OpButton:
                text:"-"
                on_press:root.math_sign("-")
                
            NewButton:
                text:"1"
                on_press:root.click(1)

            NewButton:
                text:"2"
                on_press:root.click(2)

            NewButton:
                text:"3"
                on_press:root.click(3)

            OpButton:
                text:"+"
                on_press:root.math_sign("+")
                
            OpButton:
                text:"+/-"
                on_press:root.pos_neg()
 
            NewButton:
                text:"0"
                on_press:root.click(0)

            OpButton:
                text:"."
                on_press:root.dot()
                
            OpButton:
                text:"="
                on_press:root.equal()
                

            
            

            

            

          

            